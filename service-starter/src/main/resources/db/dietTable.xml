<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <changeSet id="1" author="artur">
        <preConditions onFail="CONTINUE">
            <not>
                <tableExists tableName="diet"/>
            </not>
        </preConditions>
        <createTable tableName="diet">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="version" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="diet_type" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_diet_type"
                    references="diet_type(id)"/>
            </column>
            <column name="calories" type="integer">
                <constraints nullable="false"/>
            </column>
            <column name="meals_number" type="integer">
                <constraints nullable="false"/>
            </column>
            <column name="price" type="double precision">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2" author="artur">
        <preConditions onFail="CONTINUE">
            <not>
                <columnExists tableName="diet" columnName="number"/>
            </not>
        </preConditions>
        <addColumn tableName="diet">
            <column name="number" type="varchar(6)">
                <constraints nullable="false" unique="true"/>
            </column>
        </addColumn>
    </changeSet>
</databaseChangeLog>
